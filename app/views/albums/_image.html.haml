= form_for @image, url: images_path, method: :post, html: { multipart: true } do |f|
  .form-actions
    = f.hidden_field :album_id, value: @album_id
    = f.file_field :image
  .space
  .form-actions
    = f.text_field :name, class: "image_name", placeholder: "Image Name"
  .space
  .form-actions
    = f.text_field :tag_line, class: "tag_field", placeholder: "Tag Line"
  .space
  .form-actions
    = f.submit