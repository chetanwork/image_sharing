.container
  .row
    .col-lg-12
      %h1.page-header Upload Image
      = render "image", image: @image, owner_albums: @album_id
  .row	
    .col-lg-12
      %h1.page-header Gallery
    - @album_images.each do |image|
      .col-lg-3.col-md-4.col-xs-6.thumb
        %a.thumbnail{:href => "#"}
          %img.img-responsive{:alt => "", :src => image.image.url}
            .image-info
              .text-center= image.name
              .text-center= image.tag_line
              .text-center= image.created_at.strftime("%d-%m-%y")